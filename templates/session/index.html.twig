{% extends 'base-admin.html.twig' %}

{% block title %}Sesiones{% endblock %}

{% block body %}
    <h1>Listado de sesiones</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.name }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="{{ path('session_show', {'id': session.id}) }}"><i class="far fa-eye"></i> Mostrar</a>
                        <a class="btn btn-secondary" href="{{ path('session_edit', {'id': session.id}) }}"><i class="far fa-edit"></i> Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay sesiones</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
